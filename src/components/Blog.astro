---
import Card from "./Card.astro";
const posts = await Astro.glob("../posts/*.md");
---

<section class="grid md:grid-cols-2 gap-20">
  {
    posts.map((post) => (
      <Card>
        <img class="border-b" alt="" src={post.frontmatter.cover} />
        <div class="p-5">
          <h3 class="text-xl">{post.frontmatter.title}</h3>
          <p class="mt-5">{post.frontmatter.lead}</p>
          <p class="mt-5 text-gray-700">by {post.frontmatter.author}</p>
          <a href={`/${post.frontmatter.slug}`}  target="_blank"
        rel="noreferrer noopener">
            <button class="border p-2 rounded-none mt-5">Read</button>
          </a>
        </div>
      </Card>
    ))
  }
</section>

